<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <include>View_50</include>
      <control type="panel" id="53" description="Grid view">
        <viewtype label="536">Thumbnails</viewtype>
        <left>24</left>
        <top>96</top>
        <height>900</height>
        <orientation>horizontal</orientation>
        <pagecontrol>60</pagecontrol>
        <preloaditems>4</preloaditems>
        <itemlayout width="360" height="450">
          <include>SquareBG_FO</include>
          <control type="image">
            <include>SquareCommons</include>
            <texture background="true">$INFO[ListItem.Thumb]</texture>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>366</top>
            <height>30</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>400</top>
            <height>30</height>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Date]</label>
          </control>
        </itemlayout>
        <focusedlayout width="360" height="450">
            <include>SquareBG_FO</include>
            <control type="image">
              <include>SquareCommons</include>
              <texture background="true">$INFO[ListItem.Thumb]</texture>
            </control>
            <control type="label">
              <left>20</left>
              <right>20</right>
              <top>366</top>
              <height>30</height>
              <textcolor>$VAR[LabelNFColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label">
              <left>20</left>
              <right>20</right>
              <top>400</top>
              <height>30</height>
              <textcolor>$VAR[Label2Color]</textcolor>
              <label>$INFO[ListItem.Date]</label>
            </control>
        </focusedlayout>
      </control>
      <control type="group" description="53 furniture">
        <visible>Control.IsVisible(53)</visible>
        <include>ContainerVisibleFade</include>
        <control type="label" description="MainHeading">
          <include>CenterHeading</include>
          <label>$VAR[GlobalHeadings]</label>
        </control>
      </control>
      <control type="grouplist" id="9000">
        <include>9000GrouplistParameters</include>
        <control type="button" id="8999" description="Player">
          <visible>Player.HasMedia</visible>
          <onclick condition="Player.HasMedia">fullscreen</onclick>
          <label>$LOCALIZE[16003]</label>
          <include>9000Buttons</include>
        </control>
        <control type="button" id="2" description="Views">
          <include>9000Buttons</include>
        </control>
        <control type="button" id="3" description="Sort">
          <include>9000Buttons</include>
        </control>
        <control type="togglebutton" id="4" description="SortMode">
          <alttexturenofocus>-</alttexturenofocus>
          <include>9000Buttons</include>
          <label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
          <altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
        </control>
        <control type="button" id="6" description="Slideshow">
          <disabledcolor>$VAR[DisabledColor]</disabledcolor>
          <include>9000Buttons</include>
          <label>108</label>
          <visible>!ListItem.IsFolder</visible>
        </control>
        <control type="button" id="7" description="Recursive slideshow">
          <disabledcolor>$VAR[DisabledColor]</disabledcolor>
          <include>9000Buttons</include>
          <label>13318</label>
          <visible>ListItem.IsFolder</visible>
        </control>
        <control type="togglebutton" id="9" description="Randomize">
          <include>9000Buttons</include>
          <label>13319</label>
          <label>$LOCALIZE[13319]</label>
          <altlabel>$LOCALIZE[13319]: $LOCALIZE[16041]</altlabel>
        </control>
      </control>
    </control>
  </controls>
</window>
