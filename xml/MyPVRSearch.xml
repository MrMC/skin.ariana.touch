<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <menucontrol>9000</menucontrol>
  <views>50</views>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="MainHeading">
        <right>66</right>
        <top>120</top>
        <width>800</width>
        <height>40</height>
        <font>size50B</font>
        <label>[B]$VAR[GlobalHeadings][/B]</label>
        <textcolor>$VAR[LabelNFColor]</textcolor>
        <align>center</align>
      </control>
      <control type="list" id="50">
        <right>66</right>
        <top>248</top>
        <width>800</width>
        <height>750</height>
        <onup>50</onup>
        <ondown>50</ondown>
        <onback>9000</onback>
        <pagecontrol>60</pagecontrol>
        <viewtype label="535">List 50</viewtype>
        <itemlayout width="800" height="125">
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>800</width>
            <height>120</height>
            <texture border="10">focus/FrameNF.png</texture>
            <bordersize>0</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <visible>![IsEmpty(ListItem.Duration) + IsEmpty(ListItem.Thumb)]</visible>
            <right>10</right>
            <top>9</top>
            <height>99</height>
            <width>99</width>
            <texture fallback="focus/FrameNF.png" align="right" aligny="center">$INFO[ListItem.Thumb]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Duration">
            <visible>IsEmpty(ListItem.Thumb)</visible>
            <right>10</right>
            <top>9</top>
            <height>99</height>
            <width>99</width>
            <font>size14</font>
            <align>center</align>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Duration]</label>
          </control>
          <control type="image">
            <visible>ListItem.IsRecording</visible>
            <left>12</left>
            <top>54</top>
            <height>28</height>
            <width>28</width>
            <texture align="left" aligny="center">$VAR[PVRTimerIcon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Nr">
            <left>14</left>
            <width>300</width>
            <top>6</top>
            <height>50</height>
            <font>size20</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.ChannelNumber]</label>
          </control>
          <control type="label" description="Main Label">
            <top>6</top>
            <left>110</left>
            <right>130</right>
            <height>50</height>
            <font>size22</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Label2">
            <top>54</top>
            <left>110</left>
            <right>130</right>
            <height>30</height>
            <font>size16</font>
            <scroll>false</scroll>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Title]</label>
          </control>
          <control type="progress">
            <visible>ListItem.HasEpg</visible>
            <top>93</top>
            <left>110</left>
            <right>130</right>
            <height>10</height>
            <texturebg>progress/ProgressBG.png</texturebg>
            <lefttexture>progress/ProgressLeft.png</lefttexture>
            <righttexture flipx="true">progress/ProgressLeft.png</righttexture>
            <midtexture>progress/ProgressMid.png</midtexture>
            <info>ListItem.Progress</info>
          </control>
        </itemlayout>
        <focusedlayout width="800" height="125">
          <control type="group">
            
            <control type="image">
              <animation effect="fade" time="100">VisibleChange</animation>
              <left>0</left>
              <top>0</top>
              <width>800</width>
              <height>120</height>
              <texture border="10">focus/FrameFO.png</texture>
              <bordersize>0</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
              <visible>![IsEmpty(ListItem.Duration) + IsEmpty(ListItem.Thumb)]</visible>
              <right>10</right>
              <top>9</top>
              <height>99</height>
              <width>99</width>
              <texture fallback="focus/FrameNF.png" align="right" aligny="center">$INFO[ListItem.Thumb]</texture>
              <aspectratio>keep</aspectratio>
            </control>
            <control type="label" description="Duration">
              <visible>IsEmpty(ListItem.Thumb)</visible>
              <right>10</right>
              <top>9</top>
              <height>99</height>
              <width>99</width>
              <font>size14</font>
              <align>center</align>
              <textcolor>$VAR[Label2Color]</textcolor>
              <label>$INFO[ListItem.Duration]</label>
            </control>
            <control type="image">
              <visible>ListItem.IsRecording</visible>
              <left>12</left>
              <top>54</top>
              <height>28</height>
              <width>28</width>
              <texture align="left" aligny="center">$VAR[PVRTimerIcon]</texture>
              <aspectratio>keep</aspectratio>
            </control>
            <control type="label" description="Nr">
              <left>14</left>
              <width>300</width>
              <top>6</top>
              <height>50</height>
              <font>size20</font>
              <scroll>false</scroll>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.ChannelNumber]</label>
            </control>
            <control type="label" description="Main Label">
              <top>6</top>
              <left>110</left>
              <right>130</right>
              <height>50</height>
              <font>size22</font>
              <scroll>false</scroll>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Label2">
              <top>54</top>
              <left>110</left>
              <right>130</right>
              <height>30</height>
              <font>size16</font>
              <scroll>false</scroll>
              <textcolor>$VAR[Label2Color]</textcolor>
              <label>$INFO[ListItem.Title]</label>
            </control>
            <control type="progress">
              <visible>ListItem.HasEpg</visible>
              <top>93</top>
              <left>110</left>
              <right>130</right>
              <height>10</height>
              <texturebg>progress/ProgressBG.png</texturebg>
              <lefttexture>progress/ProgressLeft.png</lefttexture>
              <righttexture flipx="true">progress/ProgressLeft.png</righttexture>
              <midtexture>progress/ProgressMid.png</midtexture>
              <info>ListItem.Progress</info>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="group" description="List 50 furniture">
        <visible>Control.IsVisible(50)</visible>
        <include>ContainerVisibleFade</include>
        <include>InfoPVR</include>
      </control>
      <control type="group" description="Side menu 9000 group">
        <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus()</visible>
        <include>TopBar</include>
        <include>VisibleFadeEffect</include>
        <include>PVRGroup9000</include>
      </control>
    </control>
  </controls>
</window>
