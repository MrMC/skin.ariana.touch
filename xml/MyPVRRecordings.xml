<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <views>50</views>
  <menucontrol>9000</menucontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="MainHeading">
        <include>CenterHeading</include>
        <label>$VAR[GlobalHeadings]</label>
      </control>
      <control type="list" id="50">
        <right>0</right>
        <top>96</top>
        <width>48%</width>
        <bottom>80</bottom>
        <onup>50</onup>
        <ondown>50</ondown>
        <onback>9000</onback>
        <pagecontrol>60</pagecontrol>
        <viewtype label="535">List 50</viewtype>
        <preloaditems>4</preloaditems>
        <itemlayout height="125">
          <control type="image">
            <left>5</left>
            <bottom>0</bottom>
            <right>30</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>0</left>
            <top>10</top>
            <height>99</height>
            <width>99</width>
            <texture align="left" aligny="center">$INFO[ListItem.Thumb]</texture>
            <aspectratio>keep</aspectratio>
            <bordersize>3</bordersize>
          </control>
          <control type="label" description="Duration">
            <right>14</right>
            <top>70</top>
            <height>30</height>
            <width>99</width>
            <font>size16</font>
            <align>right</align>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Duration]</label>
          </control>
          <control type="image">
            <right>14</right>
            <top>10</top>
            <height>50</height>
            <width>28</width>
            <texture colordiffuse="$VAR[LabelNFColor]" align="center" aligny="center">$INFO[ListItem.Overlay]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <top>10</top>
            <left>110</left>
            <right>130</right>
            <height>50</height>
            <font>size20</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Label2">
            <top>70</top>
            <left>110</left>
            <right>130</right>
            <height>30</height>
            <font>size16</font>
            <scroll>false</scroll>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Date]</label>
          </control>
        </itemlayout>
        <focusedlayout height="125">
          <control type="image">
            <left>5</left>
            <bottom>0</bottom>
            <right>30</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>0</left>
            <top>10</top>
            <height>99</height>
            <width>99</width>
            <texture align="left" aligny="center">$INFO[ListItem.Thumb]</texture>
            <aspectratio>keep</aspectratio>
            <bordersize>3</bordersize>
          </control>
          <control type="label" description="Duration">
            <right>14</right>
            <top>70</top>
            <height>30</height>
            <width>99</width>
            <font>size16</font>
            <align>right</align>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Duration]</label>
          </control>
          <control type="image">
            <right>14</right>
            <top>10</top>
            <height>50</height>
            <width>28</width>
            <texture colordiffuse="$VAR[LabelNFColor]" align="center" aligny="center">$INFO[ListItem.Overlay]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <top>10</top>
            <left>110</left>
            <right>130</right>
            <height>50</height>
            <font>size20</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Label2">
            <top>70</top>
            <left>110</left>
            <right>130</right>
            <height>30</height>
            <font>size16</font>
            <scroll>false</scroll>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Date]</label>
          </control>
        </focusedlayout>
      </control>
      <include>InfoPVR</include>
      <control type="group" description="Side menu 9000 group">
        <include>PVRGroup9000</include>
      </control>
      <control type="label" id="29">
        <font/>
        <visible>false</visible>
      </control>
      <control type="label" id="30">
        <font/>
