<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <views>50</views>
  <menucontrol>9000</menucontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="MainHeading">
        <right>66</right>
        <top>120</top>
        <width>800</width>
        <height>40</height>
        <font>size50B</font>
        <label>[B]$VAR[GlobalHeadings][/B]</label>
        <textcolor>$VAR[LabelNFColor]</textcolor>
        <align>center</align>
      </control>
      <control type="list" id="50">
        <right>66</right>
        <top>248</top>
        <width>800</width>
        <height>750</height>
        <onup>50</onup>
        <ondown>50</ondown>
        <onback>9000</onback>
        <pagecontrol>60</pagecontrol>
        <viewtype label="535">List 50</viewtype>
        <itemlayout width="800" height="125">
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>800</width>
            <height>120</height>
            <texture border="10">focus/FrameNF.png</texture>
            <bordersize>0</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>10</left>
            <top>10</top>
            <height>99</height>
            <width>99</width>
            <texture align="left" aligny="center">$INFO[ListItem.Thumb]</texture>
            <aspectratio>keep</aspectratio>
            <bordersize>3</bordersize>
          </control>
          <control type="label" description="Duration">
            <right>14</right>
            <top>0</top>
            <height>125</height>
            <width>99</width>
            <font>size14</font>
            <align>right</align>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Duration]</label>
          </control>
          <control type="image">
            <right>14</right>
            <top>14</top>
            <height>28</height>
            <width>28</width>
            <texture colordiffuse="$VAR[LabelNFColor]" align="center" aligny="center">$INFO[ListItem.Overlay]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <top>10</top>
            <left>110</left>
            <right>130</right>
            <height>50</height>
            <font>size22</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Label2">
            <top>70</top>
            <left>110</left>
            <right>130</right>
            <height>30</height>
            <font>size16</font>
            <scroll>false</scroll>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Date]</label>
          </control>
        </itemlayout>
        <focusedlayout width="800" height="125">
          <control type="group">
            
            <control type="image">
              <animation effect="fade" time="100">VisibleChange</animation>
              <left>0</left>
              <top>0</top>
              <width>800</width>
              <height>120</height>
              <texture border="10">focus/FrameFO.png</texture>
              <bordersize>0</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
              <left>10</left>
              <top>10</top>
              <height>99</height>
              <width>99</width>
              <texture align="left" aligny="center">$INFO[ListItem.Thumb]</texture>
              <aspectratio>keep</aspectratio>
              <bordersize>3</bordersize>
            </control>
            <control type="label" description="Duration">
              <right>14</right>
              <top>0</top>
              <height>125</height>
              <width>99</width>
              <font>size14</font>
              <align>right</align>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Duration]</label>
            </control>
            <control type="image">
              <right>14</right>
              <top>14</top>
              <height>28</height>
              <width>28</width>
              <texture colordiffuse="$VAR[LabelFOColor]" align="center" aligny="center">$INFO[ListItem.Overlay]</texture>
              <aspectratio>keep</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <top>10</top>
              <left>110</left>
              <right>130</right>
              <height>50</height>
              <font>size22</font>
              <scroll>false</scroll>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Label2">
              <top>70</top>
              <left>110</left>
              <right>130</right>
              <height>30</height>
              <font>size16</font>
              <scroll>false</scroll>
              <textcolor>$VAR[Label2Color]</textcolor>
              <label>$INFO[ListItem.Date]</label>
            </control>
          </control>
        </focusedlayout>
      </control>
      <include>InfoPVR</include>
      <control type="group" description="Side menu 9000 group">
        <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus()</visible>
        <include>TopBar</include>
        <include>VisibleFadeEffect</include>
        <include>PVRGroup9000</include>
      </control>
      <control type="label" id="29">
        <font/>
        <visible>false</visible>
      </control>
      <control type="label" id="30">
        <font/>
        <visible>false</visible>
      </control>
    </control>
  </controls>
</window>
