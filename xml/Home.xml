<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol>9000</defaultcontrol>
  <controls>
    <include>PlainBackground</include>
    <control type="button" id="4004" description="Users">
      <include>HiddenButton</include>
    </control>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="mrmc">
        <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]">LeftMargin</include>
        <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="LeftMargin">
          <param name="Left" value="120"/>
        </include>
        <top>15</top>
        <height>30</height>
        <width>200</width>
        <align>left</align>
        <font>size20U</font>
        <label>MrMC</label>
      </control>
      <control type="label" description="Clock">
        <centerleft>50%</centerleft>
        <top>15</top>
        <height>30</height>
        <width>300</width>
        <align>center</align>
        <font>size20</font>
        <label>$INFO[System.Time]</label>
      </control>
      <control type="image" description="battery img">
        <right>30</right>
        <top>0</top>
        <height>60</height>
        <width>60</width>
        <texture colordiffuse="$VAR[Label2Color]">icons/touch/battery.png</texture>
        <aspectratio>keep</aspectratio>
      </control>
      <control type="progress" id="9900">
        <right>42</right>
        <top>-15</top>
        <height>86</height>
        <width>40</width>
        <texturebg colordiffuse="$VAR[Label2Color]" border="2">HUD/SliderBGempty.png</texturebg>
        <lefttexture/>
        <righttexture/>
        <midtexture colordiffuse="$VAR[Label2Color]" border="1">HUD/ProgressFill.png</midtexture>
        <info>System.BatteryLevel</info>
      </control>
      <control type="label" description="battery percent">
        <top>15</top>
        <right>96</right>
        <width>90</width>
        <height>28</height>
        <align>right</align>
        <font>size19</font>
        <label>$INFO[Control.GetLabel(9900),,%]</label>
      </control>
      <control type="panel" id="9000" description="Library sections">
        <visible>Skin.HasSetting(library)</visible>
        <include>VisibleFadeEffect</include>
        <left>270</left>
        <right>360</right>
        <top>150</top>
        <bottom>75</bottom>
        <itemlayout height="100">
          <control type="image">
            <left>20</left>
            <bottom>-1</bottom>
            <right>20</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>-6</left>
            <top>0</top>
            <width>100</width>
            <bottom>0</bottom>
            <texture colordiffuse="$VAR[LabelNFColor]">$INFO[ListItem.Property(type),icons/,.png]</texture>
            <bordersize>24</bordersize>
            <align>center</align>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label">
            <left>120</left>
            <top>0</top>
            <aligny>center</aligny>
            <height>100%</height>
            <font>size24B</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </itemlayout>
        <focusedlayout height="100">
          <control type="image">
            <left>20</left>
            <bottom>-1</bottom>
            <right>20</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>-6</left>
            <top>0</top>
            <width>100</width>
            <bottom>0</bottom>
            <texture colordiffuse="$VAR[LabelNFColor]">$INFO[ListItem.Property(type),icons/,.png]</texture>
            <bordersize>24</bordersize>
            <align>center</align>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label">
            <left>120</left>
            <top>0</top>
            <aligny>center</aligny>
            <height>100%</height>
            <font>size24B</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </focusedlayout>
      </control>
      <control type="label" description="Library">
        <visible>Skin.HasSetting(library)</visible>
        <include>VisibleFadeEffect</include>
        <centerleft>50%</centerleft>
        <top>74</top>
        <height>90</height>
        <width>600</width>
        <align>center</align>
        <font>size19CU</font>
        <textcolor>$VAR[Label2Color]</textcolor>
        <label>$LOCALIZE[14022]</label>
      </control>
      <control type="list" id="9100" description="Shelf menu">
        <visible>!Skin.HasSetting(library)</visible>
        <include>VisibleFadeEffect</include>
        <centerleft>50%</centerleft>
        <top>74</top>
        <height>90</height>
        <width>900</width>
        <orientation>horizontal</orientation>
        <itemlayout width="300">
          <control type="label">
            <left>0</left>
            <right>0</right>
            <height>100%</height>
            <width>100%</width>
            <align>center</align>
            <font>size19CU</font>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </itemlayout>
        <focusedlayout width="300">
          <control type="label">
            <left>0</left>
            <right>0</right>
            <height>100%</height>
            <width>100%</width>
            <align>center</align>
            <font>size19CU</font>
            <textcolor>$VAR[SelectedColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </focusedlayout>
        <content>
          <item id="1">
            <label>$LOCALIZE[681]</label>
            <onclick>SetFocus(9001)</onclick>
          </item>
          <item id="2">
            <label>$LOCALIZE[31026]</label>
            <onclick>SetFocus(9001)</onclick>
          </item>
          <item id="3">
            <label>$LOCALIZE[2]</label>
            <onclick>SetFocus(9001)</onclick>
          </item>
        </content>
      </control>
      <control type="grouplist" id="9001" description="Home Shelves">
        <visible>!Skin.HasSetting(library)</visible>
        <include>VisibleFadeEffect</include>
        <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="LeftMargin">
          <param name="Left" value="0"/>
        </include>
        <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="LeftMargin">
          <param name="Left" value="120"/>
        </include>
        <right>240</right>
        <bottom>60</bottom>
        <top>150</top>
        <itemgap>30</itemgap>
        <aligny>top</aligny>
        <control type="panel" id="8020" description="Shelf">
          <visible>IntegerGreaterThan(Container(8020).NumItems,0)</visible>
          <visible>Container(9100).HasFocus(2)</visible>
          <include>VisibleFadeEffect</include>
          <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="FanartShelf">
            <param name="ID" value="8020"/>
            <param name="Height" value="420"/>
            <param name="Width" value="748"/>
          </include>
          <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="FanartShelf">
            <param name="ID" value="8020"/>
            <param name="Left" value="90"/>
            <param name="Height" value="420"/>
            <param name="Width" value="748"/>
          </include>
        </control>
        <control type="panel" id="8010" description="Shelf">
          <visible>!Control.IsVisible(8020)</visible>
          <visible>IntegerGreaterThan(Container(8010).NumItems,0)</visible>
          <visible>Container(9100).HasFocus(2)</visible>
          <include>VisibleFadeEffect</include>
          <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="FanartShelf">
            <param name="ID" value="8010"/>
            <param name="Height" value="420"/>
            <param name="Width" value="748"/>
          </include>
          <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="FanartShelf">
            <param name="ID" value="8010"/>
            <param name="Left" value="90"/>
            <param name="Height" value="420"/>
            <param name="Width" value="748"/>
          </include>
        </control>
        <control type="panel" id="8011" description="Shelf">
          <visible>IntegerGreaterThan(Container(8011).NumItems,0)</visible>
          <visible>Container(9100).HasFocus(2)</visible>
          <include>VisibleFadeEffect</include>
          <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="FanartShelf">
            <param name="ID" value="8011"/>
            <param name="Height" value="420"/>
            <param name="Width" value="748"/>
          </include>
          <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="FanartShelf">
            <param name="ID" value="8011"/>
            <param name="Left" value="90"/>
            <param name="Height" value="420"/>
            <param name="Width" value="748"/>
          </include>
        </control>
        <control type="panel" id="8000" description="Shelf">
          <visible>IntegerGreaterThan(Container(8000).NumItems,0)</visible>
          <visible>Container(9100).HasFocus(1)</visible>
          <include>VisibleFadeEffect</include>
          <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="PosterShelf">
            <param name="ID" value="8000"/>
            <param name="Height" value="420"/>
            <param name="Width" value="300"/>
          </include>
          <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="PosterShelf">
            <param name="ID" value="8000"/>
            <param name="Left" value="90"/>
            <param name="Height" value="420"/>
            <param name="Width" value="300"/>
          </include>
        </control>
        <control type="panel" id="8001" description="Shelf">
          <visible>IntegerGreaterThan(Container(8001).NumItems,0)</visible>
          <visible>Container(9100).HasFocus(1)</visible>
          <include>VisibleFadeEffect</include>
          <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="PosterShelf">
            <param name="ID" value="8001"/>
            <param name="Height" value="420"/>
            <param name="Width" value="300"/>
          </include>
          <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="PosterShelf">
            <param name="ID" value="8001"/>
            <param name="Left" value="90"/>
            <param name="Height" value="420"/>
            <param name="Width" value="300"/>
          </include>
        </control>
        <control type="panel" id="8002" description="Shelf">
          <visible>IntegerGreaterThan(Container(8002).NumItems,0)</visible>
          <visible>Container(9100).HasFocus(3)</visible>
          <include>VisibleFadeEffect</include>
          <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="AlbumShelf">
            <param name="ID" value="8002"/>
            <param name="Height" value="420"/>
            <param name="Width" value="420"/>
          </include>
          <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="AlbumShelf">
            <param name="ID" value="8002"/>
            <param name="Left" value="90"/>
            <param name="Height" value="420"/>
            <param name="Width" value="420"/>
          </include>
        </control>
      </control>
      <control type="image" description="SideMenu">
        <top>180</top>
        <bottom>120</bottom>
        <right>30</right>
        <width>180</width>
        <aspectratio>stretch</aspectratio>
        <texture border="22" colordiffuse="$VAR[OverlayColor]">HUD/SideMenu.png</texture>
      </control>
      <control type="grouplist" description="SideMenu">
        <top>240</top>
        <bottom>150</bottom>
        <centerright>120</centerright>
        <width>90</width>
        <orientation>vertical</orientation>
        <itemgap>120</itemgap>
        <control type="togglebutton" id="7000" description="Home">
          <include>HomeMenuButton</include>
          <texturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/home.png</texturefocus>
          <texturenofocus colordiffuse="$VAR[Label2Color]">icons/touch/home.png</texturenofocus>
          <alttexturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/library.png</alttexturefocus>
          <alttexturenofocus colordiffuse="$VAR[Label2Color]">icons/touch/library.png</alttexturenofocus>
          <usealttexture>!Skin.HasSetting(library)</usealttexture>
          <label>$LOCALIZE[10000]</label>
          <altlabel>$LOCALIZE[14022]</altlabel>
          <onclick>Skin.ToggleSetting(library)</onclick>
        </control>
        <control type="button" id="4040" description="User">
          <visible>Control.IsVisible(4004)</visible>
          <include>HomeMenuButton</include>
          <texturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/users.png</texturefocus>
          <texturenofocus colordiffuse="$VAR[Label2Color]">icons/touch/users.png</texturenofocus>
          <label>$INFO[Control.GetLabel(4004)]</label>
          <onclick>SendClick(4004)</onclick>
        </control>
        <control type="button" id="4000" description="Server">
          <include>HomeMenuButton</include>
          <texturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/server.png</texturefocus>
          <texturenofocus colordiffuse="$VAR[Label2Color]">icons/touch/server.png</texturenofocus>
        </control>
        <control type="button" id="4002" description="Settings">
          <include>HomeMenuButton</include>
          <label>$LOCALIZE[5]</label>
          <onclick>ActivateWindow(settings)</onclick>
          <texturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/settings.png</texturefocus>
          <texturenofocus colordiffuse="$VAR[Label2Color]">icons/touch/settings.png</texturenofocus>
        </control>
      </control>
      <control type="group">
        <visible>Skin.HasSetting(library)</visible>
        <include>VisibleFadeEffect</include>
        <include>NowPlaying</include>
      </control>
    </control>
  </controls>
</window>
