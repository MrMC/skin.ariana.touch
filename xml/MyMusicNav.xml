<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <include>SearchButton</include>
      <include>View_50</include>
      <control type="panel" id="53" description="Grid view">
        <visible>[Container.Content(albums) | Container.content(artists)]</visible>
        <viewtype label="536">Thumbnails</viewtype>
        <left>48</left>
        <right>48</right>
        <top>96</top>
        <bottom>80</bottom>
        <preloaditems>4</preloaditems>
        <itemlayout width="288" height="400">
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>100%</width>
            <height>288</height>
            <bordersize>8</bordersize>
            <texture>thumbs/SquareFO.png</texture>
          </control>
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>100%</width>
            <height>288</height>
            <aspectratio aligny="top">scale</aspectratio>
            <bordersize>9</bordersize>
            <texture background="true">$INFO[ListItem.Thumb]</texture>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>294</top>
            <height>30</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>330</top>
            <height>30</height>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Label2]</label>
          </control>
        </itemlayout>
        <focusedlayout width="288" height="400">
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>100%</width>
            <height>288</height>
            <bordersize>8</bordersize>
            <texture>thumbs/SquareFO.png</texture>
          </control>
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>100%</width>
            <height>288</height>
            <aspectratio aligny="top">scale</aspectratio>
            <bordersize>9</bordersize>
            <texture background="true">$INFO[ListItem.Thumb]</texture>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>294</top>
            <height>30</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>330</top>
            <height>30</height>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Label2]</label>
          </control>
        </focusedlayout>
      </control>
      <control type="group" description="53 furniture">
        <visible>Control.IsVisible(53)</visible>
        <include>ContainerVisibleFade</include>
        <control type="label" description="MainHeading">
          <include>CenterHeading</include>
          <label>$VAR[GlobalHeadings]</label>
        </control>
      </control>
      <control type="group" description="Side menu 9000 group">
        <control type="grouplist" id="9000">
          <include>9000GrouplistParameters</include>
          <control type="button" id="2" description="Views">
            <include>9000Buttons</include>
          </control>
          <control type="button" id="3" description="Sort">
            <include>9000Buttons</include>
          </control>
          <control type="togglebutton" id="4" description="Ordering">
            <include>9000Buttons</include>
            <label>$LOCALIZE[21430]</label>
            <altlabel>$LOCALIZE[21431]</altlabel>
          </control>
          <control type="togglebutton" id="16" description="PartyMode">
            <include>9000Buttons</include>
            <label>$LOCALIZE[589]: $LOCALIZE[351]</label>
            <altlabel>$LOCALIZE[589]: $LOCALIZE[16041]</altlabel>
          </control>
          <control type="button" id="20" description="Update library">
            <visible>Library.HasContent(music)</visible>
            <include>9000Buttons</include>
            <label>653</label>
          </control>
        </control>
      </control>
    </control>
    <include>NowPlaying</include>
  </controls>
</window>
