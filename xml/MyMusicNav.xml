<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <include>View_50</include>
      <control type="panel" id="53" description="Grid view">
        <visible>[Container.Content(albums) | Container.content(artists)]</visible>
        <viewtype label="536">Thumbnails</viewtype>
        <left>24</left>
        <top>96</top>
        <height>900</height>
        <orientation>horizontal</orientation>
        <pagecontrol>60</pagecontrol>
        <preloaditems>4</preloaditems>
        <itemlayout width="240" height="300">
          <include>SquareBG_FO</include>
          <control type="image">
            <include>SquareCommons</include>
            <texture background="true">$INFO[ListItem.Thumb]</texture>
          </control>
          <control type="label">
            <left>2</left>
            <top>238</top>
            <width>95%</width>
            <height>30</height>
            <font>size14</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <left>2</left>
            <top>262</top>
            <width>95%</width>
            <height>30</height>
            <font>size14</font>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Label2]</label>
          </control>
        </itemlayout>
        <focusedlayout width="240" height="300">
          <control type="group">
            <include>SquareBG_FO</include>
            <control type="image">
              <include>SquareCommons</include>
              <texture background="true">$INFO[ListItem.Thumb]</texture>
            </control>
            <control type="label">
              <left>2</left>
              <top>238</top>
              <width>95%</width>
              <height>30</height>
              <font>size14</font>
              <textcolor>$VAR[LabelNFColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label">
              <left>2</left>
              <top>262</top>
              <width>95%</width>
              <height>30</height>
              <font>size14</font>
              <textcolor>$VAR[Label2Color]</textcolor>
              <label>$INFO[ListItem.Label2]</label>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="group" description="53 furniture">
        <visible>Control.IsVisible(53)</visible>
        <include>ContainerVisibleFade</include>
        <control type="label" description="MainHeading">
          <include>CenterHeading</include>
          <label>[B]$VAR[GlobalHeadings][/B]</label>
        </control>
      </control>
      <control type="list" id="52" description="List view">
        <visible>container.content(albums)</visible>
        <right>80</right>
        <top>270</top>
        <width>840</width>
        <height>742</height>
        <onback>9000</onback>
        <pagecontrol>60</pagecontrol>
        <viewtype label="537">Big List</viewtype>
        <preloaditems>4</preloaditems>
        <itemlayout condition="container.content(albums)" width="840" height="106">
          <control type="label" description="Main Label">
            <left>34</left>
            <right>34</right>
            <top>0</top>
            <height>66</height>
            <font>size22</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Label2">
            <visible>!IsEmpty(ListItem.Label2)</visible>
            <left>34</left>
            <right>125</right>
            <bottom>0</bottom>
            <height>66</height>
            <font>size19</font>
            <scroll>false</scroll>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Label2]</label>
          </control>
          <control type="label" description="Label2">
            <visible>IsEmpty(ListItem.Label2)</visible>
            <left>34</left>
            <right>125</right>
            <bottom>0</bottom>
            <height>66</height>
            <font>size19</font>
            <scroll>false</scroll>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Artist]</label>
          </control>
        </itemlayout>
        <focusedlayout condition="container.content(albums)" width="840" height="106">
          <control type="group">

            <control type="image">
              <animation effect="fade" time="100">VisibleChange</animation>
              <left>10</left>
              <top>10</top>
              <width>820</width>
              <height>86</height>
              <texture border="10">focus/FrameFO.png</texture>
              <bordersize>-10</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <left>34</left>
              <right>34</right>
              <top>0</top>
              <height>66</height>
              <font>size22</font>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Label2">
              <visible>!IsEmpty(ListItem.Label2)</visible>
              <left>34</left>
              <right>125</right>
              <bottom>0</bottom>
              <height>66</height>
              <font>size19</font>
              <textcolor>$VAR[Label2Color]</textcolor>
              <label>$INFO[ListItem.Label2]</label>
            </control>
            <control type="label" description="Label2">
              <visible>IsEmpty(ListItem.Label2)</visible>
              <left>34</left>
              <right>125</right>
              <bottom>0</bottom>
              <height>66</height>
              <font>size19</font>
              <textcolor>$VAR[Label2Color]</textcolor>
              <label>$INFO[ListItem.Artist]</label>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="group" description="Side menu 9000 group">
        <control type="grouplist" id="9000">
          <include>9000GrouplistParameters</include>
          <control type="button" id="2" description="Views">
            <include>9000Buttons</include>
          </control>
          <control type="button" id="3" description="Sort">
            <include>9000Buttons</include>
          </control>
          <control type="togglebutton" id="4" description="Ordering">
            <include>9000Buttons</include>
            <label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
            <altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
          </control>
          <control type="togglebutton" id="16" description="PartyMode">
            <include>9000Buttons</include>
            <label>$LOCALIZE[589]: $LOCALIZE[351]</label>
            <altlabel>$LOCALIZE[589]: $LOCALIZE[16041]</altlabel>
          </control>
          <control type="button" id="20" description="Update library">
            <visible>Library.HasContent(music)</visible>
            <include>9000Buttons</include>
            <label>653</label>
          </control>
        </control>
      </control>
    </control>
  </controls>
</window>
