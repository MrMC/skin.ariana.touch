<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="MainHeading">
        <include>CenterHeading</include>
        <label>$INFO[Control.GetLabel(100)]</label>
      </control>
      <control type="list" id="50" description="List view">
        <right>0</right>
        <top>96</top>
        <width>48%</width>
        <bottom>80</bottom>
        <onup>50</onup>
        <ondown>50</ondown>
        <onback>9000</onback>
        <pagecontrol>60</pagecontrol>
        <viewtype label="535">List 50</viewtype>
        <preloaditems>4</preloaditems>
        <itemlayout height="125">
          <control type="image">
            <left>5</left>
            <bottom>0</bottom>
            <right>30</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <visible>![IsEmpty(ListItem.Duration) + IsEmpty(ListItem.Thumb)]</visible>
            <right>10</right>
            <top>9</top>
            <height>99</height>
            <width>99</width>
            <texture fallback="focus/FrameNF.png" align="right" aligny="center">$INFO[ListItem.Thumb]</texture>
            <aspectratio>keep</aspectratio>
            <bordersize>3</bordersize>
          </control>
          <control type="label" description="Duration">
            <visible>IsEmpty(ListItem.Thumb)</visible>
            <right>10</right>
            <top>9</top>
            <height>99</height>
            <width>99</width>
            <font>size14</font>
            <align>center</align>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Duration]</label>
          </control>
          <control type="image">
            <left>12</left>
            <top>54</top>
            <height>28</height>
            <width>28</width>
            <texture align="left" aligny="center">$VAR[PVRTimerIcon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Nr">
            <left>14</left>
            <width>300</width>
            <top>6</top>
            <height>50</height>
            <font>size20</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.ChannelNumber]</label>
          </control>
          <control type="label" description="Main Label">
            <top>6</top>
            <left>110</left>
            <right>130</right>
            <height>50</height>
            <font>size20</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Label2">
            <top>54</top>
            <left>110</left>
            <right>130</right>
            <height>30</height>
            <font>size16</font>
            <scroll>false</scroll>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Title]</label>
          </control>
          <control type="progress">
            <visible>ListItem.HasEpg</visible>
            <top>93</top>
            <left>110</left>
            <right>130</right>
            <height>10</height>
            <texturebg colordiffuse="white">progress/ProgressBG.png</texturebg>
            <lefttexture colordiffuse="$VAR[LabelNFColor]">progress/ProgressLeft.png</lefttexture>
            <righttexture flipx="true" colordiffuse="$VAR[LabelNFColor]">progress/ProgressLeft.png</righttexture>
            <midtexture colordiffuse="$VAR[LabelNFColor]">progress/ProgressMid.png</midtexture>
            <info>ListItem.Progress</info>
          </control>
        </itemlayout>
        <focusedlayout height="125">
          <control type="image">
            <left>5</left>
            <bottom>0</bottom>
            <right>30</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <visible>![IsEmpty(ListItem.Duration) + IsEmpty(ListItem.Thumb)]</visible>
            <right>10</right>
            <top>9</top>
            <height>99</height>
            <width>99</width>
            <texture fallback="focus/FrameNF.png" align="right" aligny="center">$INFO[ListItem.Thumb]</texture>
            <aspectratio>keep</aspectratio>
            <bordersize>3</bordersize>
          </control>
          <control type="label" description="Duration">
            <visible>IsEmpty(ListItem.Thumb)</visible>
            <right>10</right>
            <top>9</top>
            <height>99</height>
            <width>99</width>
            <font>size14</font>
            <align>center</align>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Duration]</label>
          </control>
          <control type="image">
            <left>12</left>
            <top>54</top>
            <height>28</height>
            <width>28</width>
            <texture align="left" aligny="center">$VAR[PVRTimerIcon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Nr">
            <left>14</left>
            <width>300</width>
            <top>6</top>
            <height>50</height>
            <font>size20</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.ChannelNumber]</label>
          </control>
          <control type="label" description="Main Label">
            <top>6</top>
            <left>110</left>
            <right>130</right>
            <height>50</height>
            <font>size20</font>
            <scroll>false</scroll>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Label2">
            <top>54</top>
            <left>110</left>
            <right>130</right>
            <height>30</height>
            <font>size16</font>
            <scroll>false</scroll>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Title]</label>
          </control>
          <control type="progress">
            <visible>ListItem.HasEpg</visible>
            <top>93</top>
            <left>110</left>
            <right>130</right>
            <height>10</height>
            <texturebg colordiffuse="white">progress/ProgressBG.png</texturebg>
            <lefttexture colordiffuse="$VAR[LabelNFColor]">progress/ProgressLeft.png</lefttexture>
            <righttexture flipx="true" colordiffuse="$VAR[LabelNFColor]">progress/ProgressLeft.png</righttexture>
            <midtexture colordiffuse="$VAR[LabelNFColor]">progress/ProgressMid.png</midtexture>
            <info>ListItem.Progress</info>
          </control>
        </focusedlayout>
      </control>
      <control type="group" description="50 furniture">
        <visible>Control.IsVisible(50)</visible>
        <include>ContainerVisibleFade</include>
        <include>InfoPVR</include>
      </control>
      <control type="panel" id="53" description="Grid view">
        <viewtype label="536">Thumbnails</viewtype>
        <left>24</left>
        <top>96</top>
        <height>900</height>
        <orientation>horizontal</orientation>
        <pagecontrol>60</pagecontrol>
        <preloaditems>4</preloaditems>
        <itemlayout width="360" height="450">
          <include>SquareBG_FO</include>
          <control type="image">
            <texture colordiffuse="$VAR[OverlayColor]">img/WhiteDot.png</texture>
            <include>SquareCommons</include>
          </control>
          <control type="image">
            <bordersize>10</bordersize>
            <aspectratio>keep</aspectratio>
            <include>SquareCommons</include>
            <texture background="true">$INFO[ListItem.Thumb]</texture>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>366</top>
            <height>30</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </itemlayout>
        <focusedlayout width="360" height="450">
            <include>SquareBG_FO</include>
            <control type="image">
              <texture colordiffuse="$VAR[OverlayColor]">img/WhiteDot.png</texture>
              <include>SquareCommons</include>
            </control>
            <control type="image">
              <bordersize>10</bordersize>
              <aspectratio>keep</aspectratio>
              <include>SquareCommons</include>
              <texture background="true">$INFO[ListItem.Thumb]</texture>
            </control>
            <control type="label">
              <left>20</left>
              <right>20</right>
              <top>366</top>
              <height>30</height>
              <textcolor>$VAR[LabelNFColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
        </focusedlayout>
      </control>
      <control type="group" description="Side menu 9000 group">
        <include>PVRGroup9000</include>
      </control>
    </control>
  </controls>
</window>
