<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="MainHeading">
        <include>CenterHeading</include>
        <label>$INFO[Control.GetLabel(100)]</label>
      </control>
      <control type="list" id="50">
        <left>100</left>
        <right>100</right>
        <top>96</top>
        <bottom>82</bottom>
        <onup>51</onup>
        <ondown>51</ondown>
        <viewtype label="535">List</viewtype>
        <preloaditems>2</preloaditems>
        <itemlayout height="240">
          <control type="image">
            <left>20</left>
            <bottom>0</bottom>
            <right>20</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <right>20</right>
            <top>14</top>
            <height>40</height>
            <width>40</width>
            <texture colordiffuse="$VAR[LabelNFColor]" align="right" aligny="center">$VAR[PVRTimerIcon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="image">
            <left>0</left>
            <top>0</top>
            <bottom>0</bottom>
            <width>426</width>
            <texture border="6">dot/GreyRounded25.png</texture>
            <bordersize>6</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>0</left>
            <top>0</top>
            <bottom>44</bottom>
            <width>426</width>
            <texture align="left" aligny="center">$VAR[Thumbnail]</texture>
            <bordersize>18</bordersize>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="progress">
            <visible>ListItem.HasEpg</visible>
            <bottom>20</bottom>
            <left>16</left>
            <width>394</width>
            <height>10</height>
            <texturebg colordiffuse="white">progress/ProgressBG.png</texturebg>
            <lefttexture colordiffuse="$VAR[SelectedColor]">progress/ProgressLeft.png</lefttexture>
            <righttexture flipx="true" colordiffuse="$VAR[SelectedColor]">progress/ProgressLeft.png</righttexture>
            <midtexture colordiffuse="$VAR[SelectedColor]">progress/ProgressMid.png</midtexture>
            <info>ListItem.Progress</info>
          </control>
          <control type="label" description="Main Label">
            <left>450</left>
            <right>0</right>
            <top>14</top>
            <height>40</height>
            <font>size20</font>
            <label>[B]$INFO[ListItem.ChannelNumber] $INFO[ListItem.Title, • ][/B]</label>
            <textcolor>$VAR[LabelNFColor]</textcolor>
          </control>
          <control type="label" description="Label2">
            <left>450</left>
            <right>0</right>
            <top>56</top>
            <height>40</height>
            <font>size20</font>
            <label>$VAR[TopLabel]</label>
            <textcolor>$VAR[Label2Color]</textcolor>
          </control>
          <control type="textbox" description="Plot">
            <left>450</left>
            <right>0</right>
            <top>100</top>
            <bottom>10</bottom>
            <font>plot</font>
            <align>left</align>
            <label>$VAR[Plots]</label>
          </control>
        </itemlayout>
        <focusedlayout height="240">
          <control type="image">
            <left>20</left>
            <bottom>0</bottom>
            <right>20</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <right>20</right>
            <top>14</top>
            <height>40</height>
            <width>40</width>
            <texture colordiffuse="$VAR[LabelNFColor]" align="right" aligny="center">$VAR[PVRTimerIcon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="image">
            <left>0</left>
            <top>0</top>
            <bottom>0</bottom>
            <width>426</width>
            <texture border="6">dot/GreyRounded25.png</texture>
            <bordersize>6</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>0</left>
            <top>0</top>
            <bottom>44</bottom>
            <width>426</width>
            <texture align="left" aligny="center">$VAR[Thumbnail]</texture>
            <bordersize>18</bordersize>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="progress">
            <visible>ListItem.HasEpg</visible>
            <bottom>20</bottom>
            <left>16</left>
            <width>394</width>
            <height>10</height>
            <texturebg colordiffuse="white">progress/ProgressBG.png</texturebg>
            <lefttexture colordiffuse="$VAR[SelectedColor]">progress/ProgressLeft.png</lefttexture>
            <righttexture flipx="true" colordiffuse="$VAR[SelectedColor]">progress/ProgressLeft.png</righttexture>
            <midtexture colordiffuse="$VAR[SelectedColor]">progress/ProgressMid.png</midtexture>
            <info>ListItem.Progress</info>
          </control>
          <control type="label" description="Main Label">
            <left>450</left>
            <right>0</right>
            <top>14</top>
            <height>40</height>
            <font>size20</font>
            <label>[B]$INFO[ListItem.ChannelNumber] $INFO[ListItem.Title, • ][/B]</label>
            <textcolor>$VAR[LabelNFColor]</textcolor>
          </control>
          <control type="label" description="Label2">
            <left>450</left>
            <right>0</right>
            <top>56</top>
            <height>40</height>
            <font>size20</font>
            <label>$VAR[TopLabel]</label>
            <textcolor>$VAR[Label2Color]</textcolor>
          </control>
          <control type="textbox" description="Plot">
            <left>450</left>
            <right>0</right>
            <top>100</top>
            <bottom>10</bottom>
            <font>plot</font>
            <align>left</align>
            <label>$VAR[Plots]</label>
          </control>
        </focusedlayout>
      </control>
      <control type="panel" id="53" description="Grid view">
        <viewtype label="536">Thumbnails</viewtype>
        <left>24</left>
        <top>96</top>
        <height>900</height>
        <orientation>horizontal</orientation>
        <pagecontrol>60</pagecontrol>
        <preloaditems>4</preloaditems>
        <itemlayout width="360" height="450">
          <include>SquareBG_FO</include>
          <control type="image">
            <texture colordiffuse="$VAR[OverlayColor]">img/WhiteDot.png</texture>
            <include>SquareCommons</include>
          </control>
          <control type="image">
            <bordersize>10</bordersize>
            <aspectratio>keep</aspectratio>
            <include>SquareCommons</include>
            <texture background="true">$INFO[ListItem.Thumb]</texture>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>366</top>
            <height>30</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </itemlayout>
        <focusedlayout width="360" height="450">
          <include>SquareBG_FO</include>
          <control type="image">
            <texture colordiffuse="$VAR[OverlayColor]">img/WhiteDot.png</texture>
            <include>SquareCommons</include>
          </control>
          <control type="image">
            <bordersize>10</bordersize>
            <aspectratio>keep</aspectratio>
            <include>SquareCommons</include>
            <texture background="true">$INFO[ListItem.Thumb]</texture>
          </control>
          <control type="label">
            <left>20</left>
            <right>20</right>
            <top>366</top>
            <height>30</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </focusedlayout>
      </control>
      <control type="group" description="Side menu 9000 group">
        <include>PVRGroup9000</include>
      </control>
    </control>
  </controls>
</window>
