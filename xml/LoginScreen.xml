<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">52</defaultcontrol>
  <controls>
    <include>DialogFullBG</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" id="2" description="Header label">
        <include>CenterHeading</include>
        <label>13406</label>
      </control>
      <control type="panel" id="52" description="Addons like">
        <centerleft>50%</centerleft>
        <top>220</top>
        <width>780</width>
        <height>660</height>
        <onleft>5</onleft>
        <onright>5</onright>
        <ondown>5</ondown>
        <onup>5</onup>
        <itemlayout height="110">
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>100%</width>
            <height>100</height>
            <texture border="10">focus/FrameNF.png</texture>
            <bordersize>-5</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>5</left>
            <top>4</top>
            <width>90</width>
            <height>90</height>
            <texture diffuse="img/UserDiffuse.png">$INFO[ListItem.Thumb]</texture>
            <aspectratio align="left" aligny="center" scalediffuse="false">scale</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <left>120</left>
            <right>70</right>
            <height>90%</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label][CR]$INFO[ListItem.Property(Addon.Version), - $LOCALIZE[24051] ]$INFO[ListItem.Property(Addon.Creator), • ]</label>
            <scroll>false</scroll>
          </control>
          <control type="image">
            <visible>ListItem.IsSelected</visible>
            <right>20</right>
            <top>0</top>
            <width>30</width>
            <height>90%</height>
            <texture colordiffuse="$VAR[LabelNFColor]">img/RadioON.png</texture>
            <aspectratio aligny="center">keep</aspectratio>
          </control>
        </itemlayout>
        <focusedlayout height="110">
          <control type="group">

            <control type="image">
              <animation effect="fade" time="100">VisibleChange</animation>
              <left>0</left>
              <right>0</right>
              <top>0</top>
              <height>100</height>
              <texture border="10">focus/FrameFO.png</texture>
              <bordersize>-5</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
              <left>5</left>
              <top>4</top>
              <width>90</width>
              <height>90</height>
              <texture diffuse="img/UserDiffuse.png">$INFO[ListItem.Thumb]</texture>
              <aspectratio align="left" aligny="center" scalediffuse="false">scale</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <left>120</left>
              <right>70</right>
              <height>90%</height>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Label][CR]$INFO[ListItem.Property(Addon.Version), - $LOCALIZE[24051] ]$INFO[ListItem.Property(Addon.Creator), • ]</label>
              <scroll>false</scroll>
            </control>
            <control type="image">
              <visible>ListItem.IsSelected</visible>
              <right>20</right>
              <top>0</top>
              <width>30</width>
              <height>90%</height>
              <texture colordiffuse="$VAR[LabelFOColor]">img/RadioON.png</texture>
              <aspectratio aligny="center">keep</aspectratio>
            </control>
          </control>
        </focusedlayout>
      </control>
    </control>
  </controls>
</window>
