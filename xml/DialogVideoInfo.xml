          <texturenofocus>icons/touch/videoinfoplay.png</texturenofocus>
          <alttexturefocus>icons/touch/videoinfoplay2.png</alttexturefocus>
          <alttexturenofocus>icons/touch/videoinfoplay2.png</alttexturenofocus>
