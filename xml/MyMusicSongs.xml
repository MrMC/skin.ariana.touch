<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <include>View_50</include>
      <control type="panel" id="53" description="Grid view">
        <viewtype label="536">Thumbnails</viewtype>
        <left>24</left>
        <top>96</top>
        <height>900</height>
        <orientation>horizontal</orientation>
        <pagecontrol>60</pagecontrol>
        <preloaditems>4</preloaditems>
        <itemlayout width="240" height="300">
          <include>SquareBG_FO</include>
          <control type="image">
            <include>SquareCommons</include>
            <texture background="true">$INFO[ListItem.Thumb]</texture>
          </control>
          <control type="label">
            <left>2</left>
            <top>238</top>
            <width>95%</width>
            <height>30</height>
            <font>size14</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <left>2</left>
            <top>262</top>
            <width>95%</width>
            <height>30</height>
            <font>size14</font>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Label2]</label>
          </control>
        </itemlayout>
        <focusedlayout width="240" height="300">
          <control type="group">
            <include>SquareBG_FO</include>
            <control type="image">
              <include>SquareCommons</include>
              <texture background="true">$INFO[ListItem.Thumb]</texture>
            </control>
            <control type="label">
              <left>2</left>
              <top>238</top>
              <width>95%</width>
              <height>30</height>
              <font>size14</font>
              <textcolor>$VAR[LabelNFColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label">
              <left>2</left>
              <top>262</top>
              <width>95%</width>
              <height>30</height>
              <font>size14</font>
              <textcolor>$VAR[Label2Color]</textcolor>
              <label>$INFO[ListItem.Label2]</label>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="group" description="53 furniture">
        <visible>Control.IsVisible(53)</visible>
        <include>ContainerVisibleFade</include>
        <control type="label" description="MainHeading">
          <include>CenterHeading</include>
          <label>$VAR[GlobalHeadings]</label>
        </control>
      </control>
      <control type="group" description="Side menu 9000 group">
        <control type="grouplist" id="9000">
          <include>9000GrouplistParameters</include>
          <control type="button" id="2" description="Views">
            <include>9000Buttons</include>
          </control>
          <control type="button" id="3" description="Sort">
            <include>9000Buttons</include>
          </control>
          <control type="button" id="19" description="Filter">
            <include>9000Buttons</include>
            <label>$LOCALIZE[587] $LOCALIZE[31292]</label>
          </control>
          <control type="button" id="697" description="Library">
            <visible>Library.HasContent(music)</visible>
            <include>9000Buttons</include>
            <label>$LOCALIZE[1024] $LOCALIZE[14022]</label>
            <onclick>ActivateWindow(MusicLibrary,root)</onclick>
          </control>
        </control>
      </control>
    </control>
  </controls>
</window>
