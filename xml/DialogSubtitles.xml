<?xml version="1.0" encoding="UTF-8"?>
<window>
  <controls>
    <include>DialogFullBG</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="Video File name">
        <include>CenterHeading</include>
        <label>$INFO[Player.Filename]</label>
      </control>
      <control type="image" id="110" description="Service Logo">
        <centerleft>50%</centerleft>
        <top>100</top>
        <width>500</width>
        <height>60</height>
        <aspectratio align="center">keep</aspectratio>
      </control>
      <control type="label" id="100" description="Active service label">
        <visible>false</visible>
        <centerleft>50%</centerleft>
        <top>120</top>
        <width>1320</width>
        <height>60</height>
        <textcolor>$VAR[LabelFOColor]</textcolor>
        <align>center</align>
        <aligny>center</aligny>
        <wrapmultiline>true</wrapmultiline>
      </control>
      <control type="label" id="140" description="Number of available/Searching...">
        <centerleft>50%</centerleft>
        <top>180</top>
        <width>100%</width>
        <height>30</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>size18</font>
        <textcolor>$VAR[Label2Color]</textcolor>
      </control>
      <control type="panel" id="120" description="List of available subtitles">
        <left>40</left>
        <right>40</right>
        <top>240</top>
        <height>720</height>
        <onleft>150</onleft>
        <onright>150</onright>
        <onup>120</onup>
        <ondown>120</ondown>
        <itemlayout height="80">
          <control type="image">
            <left>10</left>
            <bottom>0</bottom>
            <right>10</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>10</left>
            <top>0</top>
            <width>33</width>
            <height>100%</height>
            <aspectratio>keep</aspectratio>
            <texture>flags/$INFO[ListItem.Thumb].gif</texture>
          </control>
          <control type="label">
            <left>54</left>
            <top>0</top>
            <width>135</width>
            <height>100%</height>
            <font>size20</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <scroll>false</scroll>
            <align>left</align>
            <info>ListItem.Label</info>
          </control>
          <control type="image">
            <left>204</left>
            <top>4</top>
            <width>60</width>
            <height>100%</height>
            <aspectratio>keep</aspectratio>
            <texture>icon_sync.png</texture>
            <visible>ListItem.property(sync)</visible>
          </control>
          <control type="image">
            <left>276</left>
            <top>4</top>
            <width>24</width>
            <height>100%</height>
            <aspectratio>keep</aspectratio>
            <texture>icon_cc.png</texture>
            <visible>ListItem.property(hearing_imp)</visible>
          </control>
          <control type="label">
            <left>315</left>
            <height>100%</height>
            <right>130</right>
            <font>size20</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <scroll>false</scroll>
            <align>left</align>
            <info>ListItem.Label2</info>
          </control>
          <control type="image">
            <right>0</right>
            <top>4</top>
            <width>110</width>
            <height>100%</height>
            <aspectratio>keep</aspectratio>
            <colordiffuse>$VAR[LabelNFColor]</colordiffuse>
            <texture>badges/$INFO[ListItem.ActualIcon].png</texture>
          </control>
        </itemlayout>
        <focusedlayout height="80">
          <control type="image">
            <left>10</left>
            <bottom>0</bottom>
            <right>10</right>
            <height>1</height>
            <texture border="1" colordiffuse="$VAR[Label2Color]">dot/Grey.png</texture>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>10</left>
            <top>0</top>
            <width>33</width>
            <height>100%</height>
            <aspectratio>keep</aspectratio>
            <texture>flags/$INFO[ListItem.Thumb].gif</texture>
          </control>
          <control type="label">
            <left>54</left>
            <top>0</top>
            <width>135</width>
            <height>100%</height>
            <font>size20</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <scroll>false</scroll>
            <align>left</align>
            <info>ListItem.Label</info>
          </control>
          <control type="image">
            <left>204</left>
            <top>4</top>
            <width>60</width>
            <height>100%</height>
            <aspectratio>keep</aspectratio>
            <texture>icon_sync.png</texture>
            <visible>ListItem.property(sync)</visible>
          </control>
          <control type="image">
            <left>276</left>
            <top>4</top>
            <width>24</width>
            <height>100%</height>
            <aspectratio>keep</aspectratio>
            <texture>icon_cc.png</texture>
            <visible>ListItem.property(hearing_imp)</visible>
          </control>
          <control type="label">
            <left>315</left>
            <height>100%</height>
            <right>130</right>
            <font>size20</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <scroll>false</scroll>
            <align>left</align>
            <info>ListItem.Label2</info>
          </control>
          <control type="image">
            <right>0</right>
            <top>4</top>
            <width>110</width>
            <height>100%</height>
            <colordiffuse>$VAR[LabelNFColor]</colordiffuse>
            <aspectratio>keep</aspectratio>
            <texture>badges/$INFO[ListItem.ActualIcon].png</texture>
          </control>
        </focusedlayout>
      </control>
      <control type="label" id="130" description="Notification Local subtitle available">
        <centerleft>50%</centerleft>
        <bottom>90</bottom>
        <width>100%</width>
        <height>30</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>size18</font>
        <textcolor>$VAR[Label2Color]</textcolor>
        <label>$LOCALIZE[31287]</label>
        <wrapmultiline>true</wrapmultiline>
      </control>
      <control type="list" id="150" description="list of services">
        <left>0</left>
        <bottom>0</bottom>
        <width>50%</width>
        <height>80</height>
        <orientation>horizontal</orientation>
        <itemlayout width="320">
          <control type="label">
            <top>0</top>
            <left>0</left>
            <right>0</right>
            <height>100%</height>
            <align>center</align>
            <info>ListItem.Label</info>
            <textcolor>$VAR[SelectedColor]</textcolor>
          </control>
        </itemlayout>
        <focusedlayout width="320">
          <control type="label">
            <top>0</top>
            <left>0</left>
            <right>0</right>
            <height>100%</height>
            <align>center</align>
            <info>ListItem.Label</info>
            <textcolor>$VAR[SelectedColor]</textcolor>
          </control>
        </focusedlayout>
      </control>
      <control type="grouplist">
        <left>50%</left>
        <width>50%</width>
        <include>9000GrouplistParameters</include>
        <control type="button" id="160" description="Manual search Button">
          <include>9000Buttons</include>
          <label>$LOCALIZE[413]</label>
          <onleft>120</onleft>
          <onright>120</onright>
          <onup>150</onup>
          <ondown>170</ondown>
        </control>
        <control type="button" id="170" description="Manual search Button">
          <include>9000Buttons</include>
          <label>$LOCALIZE[24148]</label>
          <onleft>120</onleft>
          <onright>120</onright>
          <onup>160</onup>
          <ondown>150</ondown>
        </control>
      </control>
    </control>
  </controls>
</window>
