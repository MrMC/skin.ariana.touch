<?xml version="1.0" encoding="UTF-8"?>
<window>
  <animation effect="fade" time="200">WindowClose</animation>
  <controls>
    <control type="group">
      <include>OpenClose</include>
      <centerleft>50%</centerleft>
      <centertop>40%</centertop>
      <width>540</width>
      <height>124</height>
      <control type="image">
        <top>18</top>
				<width>552</width>
        <height>90</height>
        <texture border="24">HUD/HUDBackground.png</texture>
      </control>
      <control type="image">
        <visible>!player.passthrough + IntegerGreaterThan(player.volume,0)</visible>
        <top>12</top>
				<height>114</height>
        <width>540</width>
        <aspectratio align="left">keep</aspectratio>
        <texture>HUD/Volume.png</texture>
      </control>
      <control type="image">
        <visible>player.passthrough | !IntegerGreaterThan(player.volume,0)</visible>
        <top>12</top>
				<height>114</height>
        <width>540</width>
        <aspectratio align="left">keep</aspectratio>
        <texture>HUD/VolumeZero.png</texture>
			</control>
      <control type="progress" id="20">
        <left>126</left>
				<top>50</top>
				<width>300</width>
        <height>27</height>
        <reveal>true</reveal>
        <texturebg>HUD/VolumeBarBackground.png</texturebg>
        <lefttexture>-</lefttexture>
        <midtexture>HUD/VolumeBar.png</midtexture>
        <righttexture>-</righttexture>
        <info>Player.Volume</info>
      </control>
      <control type="label">
        <left>30</left>
				<width>480</width>
        <height>124</height>
        <font>size24B</font>
        <align>right</align>
				<label>$INFO[Control.GetLabel(20)]</label>
				<textcolor>white</textcolor>
      </control>
    </control>
  </controls>
</window>
