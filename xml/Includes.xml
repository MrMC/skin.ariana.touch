<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include file="Includes_Variables.xml" />
  <include file="defaults.xml" />
  <include file="Includes_Views.xml" />
  <include name="PVRwidth" description="PVR count">
    <width>1250</width>
  </include>
  <include name="LeftMargin">
    <param name="Left" default="30"/>
    <definition>
      <left>$PARAM[Left]</left>
  </definition>
  </include>
  <include name="RightMargin">
    <param name="Right" default="30"/>
    <definition>
      <right>$PARAM[Right]</right>
  </definition>
  </include>
  <include name="VerticalMargins">
    <top>96</top>
    <bottom>96</bottom>
  </include>
  <include name="HorizontalMargins">
    <param name="Left" default="30"/>
    <param name="Right" default="30"/>
    <definition>
      <left>$PARAM[Left]</left>
      <right>$PARAM[Right]</right>
  </definition>
  </include>
  <include name="DownButton">
    <param name="Right" default="30"/>
    <definition>
      <control type="button" description="Down">
      <top>46</top>
      <right>$PARAM[Right]</right>
      <texturefocus>icons/touch/down.png</texturefocus>
      <texturenofocus>icons/touch/down.png</texturenofocus>
      <width>50</width>
      <height>50</height>
      <font>-</font>
      <align>left</align>
      <aligny>center</aligny>
      <onclick>Dialog.Close(all)</onclick>
      <onclick>FullScreen</onclick>
    </control>
  </definition>
  </include>
  <include name="CloseButton">
    <param name="Left" default="30"/>
    <definition>
      <control type="button" description="Close">
      <top>0</top>
      <left>$PARAM[Left]</left>
      <texturefocus>icons/touch/close.png</texturefocus>
      <texturenofocus>icons/touch/close.png</texturenofocus>
      <width>96</width>
      <height>96</height>
      <font>-</font>
      <align>left</align>
      <aligny>center</aligny>
      <onclick>back</onclick>
    </control>
  </definition>
  </include>
  <include name="PlayerCloseButton">
    <param name="Left" default="30"/>
    <definition>
    <control type="button" description="PlayerClose">
      <top>46</top>
      <left>$PARAM[Left]</left>
      <texturefocus>icons/touch/close.png</texturefocus>
      <texturenofocus>icons/touch/close.png</texturenofocus>
      <width>50</width>
      <height>50</height>
      <font>-</font>
      <align>left</align>
      <aligny>center</aligny>
      <onclick>Dialog.Close(all)</onclick>
      <onclick>PlayerControl(Stop)</onclick>
    </control>
  </definition>
  </include>
  <include name="BackButton">
    <param name="Left" default="30"/>
    <definition>
    <control type="button" description="Back">
      <texturefocus colordiffuse="$VAR[SelectedColor]" border="89,0,0,0">icons/touch/back.png</texturefocus>
      <texturenofocus colordiffuse="$VAR[SelectedColor]" border="89,0,0,0">icons/touch/back.png</texturenofocus>
      <top>0</top>
      <left>$PARAM[Left]</left>
      <width>360</width>
      <height>96</height>
      <focusedcolor>$VAR[SelectedColor]</focusedcolor>
      <textcolor>$VAR[SelectedColor]</textcolor>
      <align>left</align>
      <aligny>center</aligny>
      <textoffsetx>60</textoffsetx>
      <label>[UPPERCASE]$LOCALIZE[31040][/UPPERCASE]</label>
      <onclick>back</onclick>
    </control>
  </definition>
  </include>
  <include name="SearchButton">
    <param name="Right" default="30"/>
    <definition>
      <control type="button" id="19" description="Search">
      <texturefocus colordiffuse="$VAR[SelectedColor]" border="0,0,89,0">icons/touch/search.png</texturefocus>
      <texturenofocus colordiffuse="$VAR[SelectedColor]" border="0,0,89,0">icons/touch/search.png</texturenofocus>
      <top>0</top>
      <right>$PARAM[Right]</right>
      <width>400</width>
      <height>96</height>
      <focusedcolor>$VAR[SelectedColor]</focusedcolor>
      <textcolor>$VAR[SelectedColor]</textcolor>
      <align>right</align>
      <aligny>center</aligny>
      <textoffsetx>64</textoffsetx>
    </control>
  </definition>
</include>
<include name="9000GrouplistParameters">
    <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="HorizontalMargins">
    </include>
    <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="HorizontalMargins">
      <param name="Left" value="120"/>
      <param name="Right" value="120"/>
    </include>
    <definition>
    <left>$PARAM[Left]</left>
    <right>$PARAM[Right]</right>
    <bottom>18</bottom>
    <height>60</height>
    <itemgap>40</itemgap>
    <onleft>9000</onleft>
    <onright>9000</onright>
    <onup>50</onup>
    <ondown>50</ondown>
    <align>center</align>
    <aligny>center</aligny>
    <orientation>horizontal</orientation>
    <animation effect="slide" end="0,-20" time="0" reversible="true" condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]">Conditional</animation>
  </definition>
  </include>
  <include name="9000Buttons">
    <width min="150" max="540">auto</width>
    <height>60</height>
    <textoffsetx>0</textoffsetx>
    <align>center</align>
    <aligny>center</aligny>
    <font>size22CU</font>
    <textcolor>$VAR[SelectedColor]</textcolor>
    <focusedcolor>$VAR[SelectedColor]</focusedcolor>
    <alttextcolor>$VAR[SelectedColor]</alttextcolor>
    <altselectedcolor>$VAR[SelectedColor]</altselectedcolor>
    <texturefocus/>
    <texturenofocus/>
    <alttexturenofocus/>
    <alttexturefocus/>
  </include>

  <include name="VideoMenuButtons">
    <width min="240" max="540">auto</width>
    <height>90</height>
    <font>size16USys</font>
    <align>center</align>
    <aligny>center</aligny>
    <texturefocus/>
    <texturenofocus/>
    <alttexturefocus/>
    <alttexturenofocus/>
    <textcolor>grey</textcolor>
    <focusedcolor>white</focusedcolor>
  </include>
  <include name="VideoMenuInfo">
    <control type="group" description="Info group">
      <top>90</top>
      <control type="group">
        <top>30</top>
        <control type="label" description="Main label">
          <visible>![VideoPlayer.Content(MusicVideos)]</visible>
          <include>FullscreenInfoLabelMain</include>
          <label>$INFO[VideoPlayer.Title]$INFO[VideoPlayer.TVShowTitle, • ]$INFO[VideoPlayer.Season, - $LOCALIZE[20373] ]$INFO[VideoPlayer.Episode, $LOCALIZE[20359] ]$INFO[VideoPlayer.Year, • ]</label>
        </control>
        <control type="label" description="Main label">
          <visible>VideoPlayer.Content(MusicVideos)</visible>
          <include>FullscreenInfoLabelMain</include>
          <label>[B]$INFO[VideoPlayer.Artist][/B]$INFO[VideoPlayer.Album, • ]</label>
        </control>
      </control>
    </control>
  </include>
  <include name="CenterHeading">
    <top>0</top>
    <centerleft>50%</centerleft>
    <align>center</align>
    <aligny>center</aligny>
    <width>100%</width>
    <height>96</height>
    <font>size22U</font>
  </include>
  <include name="NowPlaying">
    <control type="group" description="NowPlaying">
      <visible>Player.HasMedia</visible>
      <include>VisibleFadeEffect</include>
      <control type="image" description="bg">
        <left>0</left>
        <bottom>81</bottom>
        <width>100%</width>
        <height>70</height>
        <texture flipy="true" border="2" colordiffuse="$VAR[OverlayColor]">dot/WhiteRibbon.png</texture>
        <aspectratio align="left" aligny="top">stretch</aspectratio>
      </control>
      <control type="label">
        <bottom>81</bottom>
        <left>90</left>
        <right>650</right>
        <height>70</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>size20CU</font>
        <textoffsetx>0</textoffsetx>
        <textcolor>$VAR[Label2Color]</textcolor>
        <focusedcolor>$VAR[Label2Color]</focusedcolor>
        <scrollsuffix> • </scrollsuffix>
        <label>$VAR[PlayerState]: [COLOR $VAR[LabelNFColor]]$INFO[MusicPlayer.Artist,, • ]$INFO[Player.Title][/COLOR]$INFO[Player.TimeRemaining, / ]</label>
      </control>
      <control type="grouplist">
        <right>90</right>
        <width>500</width>
        <bottom>86</bottom>
        <height>60</height>
        <itemgap>50</itemgap>
        <align>right</align>
        <orientation>horizontal</orientation>
        <control type="button" id="1">
          <height>60</height>
          <width>60</width>
          <texturenofocus colordiffuse="$VAR[Label2Color]">OSD/Previous.png</texturenofocus>
          <texturefocus colordiffuse="$VAR[SelectedColor]">OSD/Previous.png</texturefocus>
          <onclick>PlayerControl(Previous)</onclick>
        </control>
        <control type="togglebutton" id="2">
          <height>60</height>
          <width>60</width>
          <texturenofocus colordiffuse="$VAR[Label2Color]">OSD/Play.png</texturenofocus>
          <texturefocus colordiffuse="$VAR[SelectedColor]">OSD/Play.png</texturefocus>
          <alttexturenofocus colordiffuse="$VAR[Label2Color]">OSD/Pause.png</alttexturenofocus>
          <alttexturefocus colordiffuse="$VAR[SelectedColor]">OSD/Pause.png</alttexturefocus>
          <usealttexture>Player.Playing</usealttexture>
          <onclick>PlayerControl(Play)</onclick>
        </control>
        <control type="button" id="3">
          <height>60</height>
          <width>60</width>
          <texturenofocus colordiffuse="$VAR[Label2Color]">OSD/Next.png</texturenofocus>
          <texturefocus colordiffuse="$VAR[SelectedColor]">OSD/Next.png</texturefocus>
          <onclick>PlayerControl(Next)</onclick>
        </control>
        <control type="button" id="4" description="Player">
          <height>60</height>
          <width>60</width>
          <texturenofocus colordiffuse="$VAR[Label2Color]">OSD/Fullscreen.png</texturenofocus>
          <texturefocus colordiffuse="$VAR[SelectedColor]">OSD/Fullscreen.png</texturefocus>
          <onclick>fullscreen</onclick>
        </control>
        <control type="button" id="5">
          <height>60</height>
          <width>60</width>
          <texturenofocus colordiffuse="$VAR[Label2Color]">OSD/Cancel.png</texturenofocus>
          <texturefocus colordiffuse="$VAR[SelectedColor]">OSD/Cancel.png</texturefocus>
          <onclick>PlayerControl(Stop)</onclick>
        </control>
      </control>
    </control>
  </include>
  <include name ="TopBar">
    <control type="image" description="Bar">
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>95</height>
      <texture colordiffuse="$VAR[OverlayColor]">dot/White70.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
    <control type="image" description="Line">
      <left>0</left>
      <top>95</top>
      <width>100%</width>
      <height>1</height>
      <texture colordiffuse="$VAR[Label2Color]">dot/White20.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
  </include>
  <include name ="BottomBar">
    <control type="image" description="Bar">
      <left>0</left>
      <bottom>0</bottom>
      <width>100%</width>
      <height>95</height>
      <texture colordiffuse="$VAR[OverlayColor]">dot/White70.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
    <control type="image" description="Line">
      <left>0</left>
      <bottom>95</bottom>
      <width>100%</width>
      <height>1</height>
      <texture colordiffuse="$VAR[Label2Color]">dot/White20.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
  </include>
  <include name="PlainBackground">
    <control type="image" description="Art">
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <aspectratio>stretch</aspectratio>
      <texture background="true">$VAR[Background.Overlay]</texture>
    </control>
    <control type="image" description="DebugGrid">
      <visible>Skin.HasSetting(DebugGrid)</visible>
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <texture>debuggrid1080.png</texture>
      <aspectratio align="left" aligny="top">scale</aspectratio>
    </control>
  </include>
  <include name="FullBackground">
    <include>PlainBackground</include>
    <include>TopBar</include>
    <include>BottomBar</include>
    <include condition="[StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]">BackButton</include>
    <include condition="![StringCompare(Skin.AspectRatio,16:9) | StringCompare(Skin.AspectRatio,4:3)]" content="BackButton">
      <param name="Left" value="120"/>
    </include>
  </include>
  <include name="VisibleFadeEffect">
    <animation effect="fade" time="200">VisibleChange</animation>
    <animation effect="fade" time="200">Hidden</animation>
  </include>
  <include name="ContainerVisibleFade">
    <animation effect="fade" time="400">Visible</animation>
    <animation effect="fade" time="200">Hidden</animation>
  </include>
  <include name="OpenClose">
    <animation effect="fade" time="200">WindowOpen</animation>
    <animation effect="fade" time="100">WindowClose</animation>
  </include>
  <include name="Fanart_Fade">
    <fadetime>320</fadetime>
    <animation effect="fade" time="320">Visible</animation>
    <animation effect="fade" time="280">Hidden</animation>
  </include>
  <include name="Icon_Fade">
    <fadetime>200</fadetime>
    <animation effect="fade" time="200">Visible</animation>
    <animation effect="fade" time="100">Hidden</animation>
  </include>
  <include name="HiddenButton">
    <left>-300</left>
    <top>-300</top>
    <width>1</width>
    <height>1</height>
  </include>
  <include name="Dimensions_Fullscreen">
    <left>0</left>
    <top>0</top>
    <width>100%</width>
    <height>100%</height>
  </include>
  <include name="SeekbarIconsCommons">
    <width>45</width>
    <height>45</height>
    <aspectratio aligny="center" align="left">keep</aspectratio>
  </include>
  <include name="SeekbarLabels">
    <height>40</height>
    <width>100%</width>
    <align>center</align>
    <font>size50B</font>
    <shadowcolor>black</shadowcolor>
    <textcolor>white</textcolor>
  </include>
  <include name="FullscreenInfoLabelMain">
    <left>0</left>
    <top>-6</top>
    <right>0</right>
    <scroll>false</scroll>
    <align>center</align>
    <font>size22</font>
    <textcolor>white</textcolor>
    <animation effect="fade" time="200">VisibleChange</animation>
  </include>
  <include name="KeyboardButtons">
    <align>center</align>
    <aligny>center</aligny>
    <textoffsetx>0</textoffsetx>
    <width>68</width>
    <height>68</height>
    <font>size26</font>
  </include>
  <include name="KeyboardButtonsPin">
    <align>center</align>
    <aligny>center</aligny>
    <textoffsetx>0</textoffsetx>
    <width>150</width>
    <height>150</height>
    <font>size28</font>
    <textcolor>$VAR[SelectedColor]</textcolor>
    <focusedcolor>$VAR[SelectedColor]</focusedcolor>
    <texturefocus colordiffuse="$VAR[SelectedColor]">buttons/KeyNumeric.png</texturefocus>
    <texturenofocus colordiffuse="$VAR[SelectedColor]">buttons/KeyNumeric.png</texturenofocus>
  </include>
</includes>
