<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include file="Includes_Variables.xml" />
  <include file="defaults.xml" />
  <include file="Includes_Views.xml" />
  <include name="9000GrouplistParameters">
    <left>0</left>
    <right>0</right>
    <bottom>0</bottom>
    <height>80</height>
    <itemgap>40</itemgap>
    <onleft>9000</onleft>
    <onright>9000</onright>
    <onup>50</onup>
    <ondown>50</ondown>
    <align>center</align>
    <aligny>center</aligny>
    <orientation>horizontal</orientation>
  </include>
  <include name="9000Buttons">
    <width min="150" max="540">auto</width>
    <height>80</height>
    <textoffsetx>0</textoffsetx>
    <align>center</align>
    <aligny>center</aligny>
    <font>size19CU</font>
    <textcolor>$VAR[SelectedColor]</textcolor>
    <focusedcolor>$VAR[SelectedColor]</focusedcolor>
    <alttextcolor>$VAR[SelectedColor]</alttextcolor>
    <altselectedcolor>$VAR[SelectedColor]</altselectedcolor>
    <texturefocus/>
    <texturenofocus/>
    <alttexturenofocus/>
    <alttexturefocus/>
  </include>
  <include name="TopBar">
    <control type="image" description="Background">
      <animation condition="ControlGroup(9000).HasFocus()" effect="slide" start="0,0" end="0,140" time="100" easing="in" reversible="false">Conditional</animation>
      <animation condition="!ControlGroup(9000).HasFocus()" effect="slide" start="0,140" end="0,0" time="100" delay="50" easing="in" reversible="false">Conditional</animation>
      <left>0</left>
      <top>-141</top>
      <width>1920</width>
      <height>142</height>
      <texture colordiffuse="$VAR[OverlayColor]">dot/White95.png</texture>
    </control>
  </include>
  <include name="SquareButtonCommons">
    <width>60</width>
    <height>60</height>
    <focusedcolor>$VAR[SelectedColor]</focusedcolor>
    <altfocusedcolor>$VAR[SelectedColor]</altfocusedcolor>
    <font>-</font>
    <label/>
    <aligny>top</aligny>
    <textoffsety>80</textoffsety>
    <textoffsetx>0</textoffsetx>
    <align>center</align>
  </include>
  <include name="VideoMenuInfo">
    <control type="group" description="Info group">
      <top>90</top>
      <control type="group">
        <top>30</top>
        <control type="label" description="Main label">
          <visible>![VideoPlayer.Content(MusicVideos)]</visible>
          <include>FullscreenInfoLabelMain</include>
          <label>$INFO[VideoPlayer.Title]$INFO[VideoPlayer.TVShowTitle, • ]$INFO[VideoPlayer.Season, - $LOCALIZE[20373] ]$INFO[VideoPlayer.Episode, $LOCALIZE[20359] ]$INFO[VideoPlayer.Year, • ]</label>
        </control>
        <control type="label" description="Main label">
          <visible>VideoPlayer.Content(MusicVideos)</visible>
          <include>FullscreenInfoLabelMain</include>
          <label>[B]$INFO[VideoPlayer.Artist][/B]$INFO[VideoPlayer.Album, • ]</label>
        </control>
      </control>
    </control>
  </include>
  <include name="DownButton">
    <control type="button" description="Down">
      <top>46</top>
      <right>46</right>
      <texturefocus>icons/touch/down.png</texturefocus>
      <texturenofocus>icons/touch/down.png</texturenofocus>
      <width>50</width>
      <height>50</height>
      <font>-</font>
      <align>left</align>
      <aligny>center</aligny>
      <onclick>Dialog.Close(all)</onclick>
      <onclick>FullScreen</onclick>
    </control>
  </include>
  <include name="CloseButton">
    <control type="button" description="Close">
      <top>16</top>
      <left>46</left>
      <texturefocus>icons/touch/close.png</texturefocus>
      <texturenofocus>icons/touch/close.png</texturenofocus>
      <width>80</width>
      <height>80</height>
      <font>-</font>
      <align>left</align>
      <aligny>center</aligny>
      <onclick>Dialog.Close()</onclick>
    </control>
  </include>
  <include name="PlayerCloseButton">
    <control type="button" description="PlayerClose">
      <top>46</top>
      <left>46</left>
      <texturefocus>icons/touch/close.png</texturefocus>
      <texturenofocus>icons/touch/close.png</texturenofocus>
      <width>50</width>
      <height>50</height>
      <font>-</font>
      <align>left</align>
      <aligny>center</aligny>
      <onclick>Dialog.Close(all)</onclick>
      <onclick>PlayerControl(Stop)</onclick>
    </control>
  </include>
  <include name="BackButton">
    <control type="button" description="Back">
      <texturefocus colordiffuse="$VAR[SelectedColor]" border="89,0,0,0">icons/touch/back.png</texturefocus>
      <texturenofocus colordiffuse="$VAR[SelectedColor]" border="89,0,0,0">icons/touch/back.png</texturenofocus>
      <top>0</top>
      <left>46</left>
      <width>360</width>
      <height>96</height>
      <focusedcolor>$VAR[SelectedColor]</focusedcolor>
      <textcolor>$VAR[SelectedColor]</textcolor>
      <align>left</align>
      <aligny>center</aligny>
      <textoffsetx>60</textoffsetx>
      <label>[UPPERCASE]$LOCALIZE[31040][/UPPERCASE]</label>
      <onclick>back</onclick>
    </control>
  </include>
  <include name="SearchButton">
    <control type="button" id="19" description="Search">
      <texturefocus colordiffuse="$VAR[SelectedColor]" border="0,0,89,0">icons/touch/search.png</texturefocus>
      <texturenofocus colordiffuse="$VAR[SelectedColor]" border="0,0,89,0">icons/touch/search.png</texturenofocus>
      <top>0</top>
      <right>46</right>
      <width>360</width>
      <height>96</height>
      <focusedcolor>$VAR[SelectedColor]</focusedcolor>
      <textcolor>$VAR[SelectedColor]</textcolor>
      <align>right</align>
      <aligny>center</aligny>
      <textoffsetx>64</textoffsetx>
    </control>
  </include>
  <include name="VideoMenuButtons">
    <width min="240" max="540">auto</width>
    <height>90</height>
    <font>size16USys</font>
    <align>center</align>
    <aligny>center</aligny>
    <texturefocus/>
    <texturenofocus/>
    <alttexturefocus/>
    <alttexturenofocus/>
    <textcolor>grey</textcolor>
    <focusedcolor>white</focusedcolor>
  </include>
  <include name="CenterHeading">
    <top>0</top>
    <centerleft>50%</centerleft>
    <align>center</align>
    <aligny>center</aligny>
    <width>100%</width>
    <height>96</height>
    <font>size22U</font>
  </include>
  <include name="NowPlaying">
    <control type="group" description="NowPlaying">
      <visible>Player.HasMedia</visible>
      <include>VisibleFadeEffect</include>
      <control type="image" description="bg">
        <left>0</left>
        <bottom>80</bottom>
        <width>100%</width>
        <height>88</height>
        <texture flipy="true" border="2" colordiffuse="$VAR[OverlayColor]">dot/WhiteRibbon.png</texture>
        <aspectratio align="left" aligny="top">stretch</aspectratio>
      </control>

      <control type="label">
        <bottom>80</bottom>
        <left>60</left>
        <right>300</right>
        <height>88</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>size20CU</font>
        <textoffsetx>0</textoffsetx>
        <textcolor>$VAR[Label2Color]</textcolor>
        <focusedcolor>$VAR[Label2Color]</focusedcolor>
        <scrollsuffix> • </scrollsuffix>
        <label>$VAR[PlayerState]: [COLOR $VAR[LabelNFColor]]$INFO[MusicPlayer.Artist,, • ]$INFO[Player.Title][/COLOR]$INFO[Player.TimeRemaining, / ]</label>
      </control>
      <control type="togglebutton" id="3">
        <bottom>90</bottom>
        <right>260</right>
        <height>66</height>
        <width>66</width>
        <texturenofocus colordiffuse="$VAR[SelectedColor]">icons/touch/play.png</texturenofocus>
        <texturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/play.png</texturefocus>
        <alttexturenofocus colordiffuse="$VAR[SelectedColor]">icons/touch/pause.png</alttexturenofocus>
        <alttexturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/pause.png</alttexturefocus>
        <usealttexture>Player.Playing</usealttexture>
        <onclick>PlayerControl(Play)</onclick>
      </control>
      <control type="button" id="3">
        <bottom>90</bottom>
        <right>160</right>
        <height>66</height>
        <width>66</width>
        <texturenofocus colordiffuse="$VAR[SelectedColor]">icons/touch/stop.png</texturenofocus>
        <texturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/stop.png</texturefocus>
        <onclick>PlayerControl(Stop)</onclick>
      </control>
      <control type="button" id="5" description="Player">
        <bottom>90</bottom>
        <right>60</right>
        <height>66</height>
        <width>66</width>
        <texturenofocus colordiffuse="$VAR[SelectedColor]">icons/touch/fullscreen.png</texturenofocus>
        <texturefocus colordiffuse="$VAR[SelectedColor]">icons/touch/fullscreen.png</texturefocus>
        <onclick>fullscreen</onclick>
      </control>
    </control>
  </include>
  <include name="FullBackground">
    <control type="image" description="BG image">
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <aspectratio>stretch</aspectratio>
      <texture background="true">$VAR[Background.Overlay]</texture>
    </control>
    <control type="image" description="TopBar">
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>96</height>
      <texture border="2" colordiffuse="$VAR[OverlayColor]">dot/WhiteRibbon.png</texture>
      <aspectratio align="left" aligny="top">stretch</aspectratio>
    </control>
    <include condition="![Window.IsActive(home) | Window.IsActive(loginscreen)]">BackButton</include>
    <control type="image" description="BottomBar">
      <left>0</left>
      <bottom>0</bottom>
      <width>100%</width>
      <height>80</height>
      <texture flipy="true" border="2" colordiffuse="$VAR[OverlayColor]">dot/WhiteRibbon.png</texture>
      <aspectratio align="left" aligny="top">stretch</aspectratio>
    </control>
    <control type="image" description="DebugGrid">
      <visible>Skin.HasSetting(DebugGrid)</visible>
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <texture>debuggrid1080.png</texture>
      <aspectratio align="left" aligny="top">scale</aspectratio>
    </control>
  </include>
  <include name="PlainBG">
    <control type="image" description="Art">
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <aspectratio>stretch</aspectratio>
      <texture background="true">$VAR[Background.Overlay]</texture>
    </control>
    <control type="image" description="DebugGrid">
      <visible>Skin.HasSetting(DebugGrid)</visible>
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <texture>debuggrid1080.png</texture>
      <aspectratio align="left" aligny="top">scale</aspectratio>
    </control>
  </include>
  <include name="VisibleFadeEffect">
    <animation effect="fade" time="200">VisibleChange</animation>
    <animation effect="fade" time="200">Hidden</animation>
  </include>
  <include name="ContainerVisibleFade">
    <animation effect="fade" time="400">Visible</animation>
    <animation effect="fade" time="200">Hidden</animation>
  </include>
  <include name="OpenClose">
    <animation effect="fade" time="200">WindowOpen</animation>
    <animation effect="fade" time="100">WindowClose</animation>
  </include>
  <include name="Fanart_Fade">
    <fadetime>320</fadetime>
    <animation effect="fade" time="320">Visible</animation>
    <animation effect="fade" time="280">Hidden</animation>
  </include>
  <include name="Icon_Fade">
    <fadetime>200</fadetime>
    <animation effect="fade" time="200">Visible</animation>
    <animation effect="fade" time="100">Hidden</animation>
  </include>
  <include name="HiddenButton">
    <left>-300</left>
    <top>-300</top>
    <width>1</width>
    <height>1</height>
  </include>
  <include name="HeadingR">
    <left>960</left>
    <top>60</top>
    <width>930</width>
    <height>75</height>
    <align>center</align>
    <aligny>bottom</aligny>
    <textcolor>$VAR[SelectedColor]</textcolor>
    <font>size50B</font>
  </include>
  <include name="Dimensions_Fullscreen">
    <left>0</left>
    <top>0</top>
    <width>100%</width>
    <height>100%</height>
  </include>
  <include name="Header">
    <control type="group">
      <visible>![Window.IsActive(home) | Window.IsActive(LoginScreen.xml)]</visible>
      <control type="label" description="Heading">
        <left>0</left>
        <top>60</top>
        <align>center</align>
        <aligny>center</aligny>
        <width>1920</width>
        <height>75</height>
        <textcolor>$VAR[LabelNFColor]</textcolor>
        <font>size50B</font>
        <label>$VAR[GlobalHeadings]</label>
      </control>
    </control>
  </include>
  <include name="SeekbarIconsCommons">
    <width>45</width>
    <height>45</height>
    <aspectratio aligny="center" align="left">keep</aspectratio>
  </include>
  <include name="SeekbarLabels">
    <height>40</height>
    <width>100%</width>
    <align>center</align>
    <font>size50B</font>
    <shadowcolor>black</shadowcolor>
    <textcolor>white</textcolor>
  </include>
  <include name="FocusButtonsAnimation">
    <animation type="Focus" reversible="true">
      <effect type="zoom" center="auto" start="100" end="104" time="100" easing="inout"/>
    </animation>
  </include>
  <include name="FullscreenInfoLabelMain">
    <left>0</left>
    <top>-6</top>
    <right>0</right>
    <scroll>false</scroll>
    <align>center</align>
    <font>size22</font>
    <textcolor>white</textcolor>
    <animation effect="fade" time="200">VisibleChange</animation>
  </include>
  <include name="KeyboardButtons">
    <align>center</align>
    <aligny>center</aligny>
    <textoffsetx>0</textoffsetx>
    <width>68</width>
    <height>68</height>
    <font>size26</font>
  </include>
  <include name="KeyboardButtonsPin">
    <align>center</align>
    <aligny>center</aligny>
    <textoffsetx>0</textoffsetx>
    <width>150</width>
    <height>150</height>
    <font>size28</font>
    <textcolor>$VAR[SelectedColor]</textcolor>
    <focusedcolor>$VAR[SelectedColor]</focusedcolor>
    <texturefocus colordiffuse="$VAR[SelectedColor]">buttons/KeyNumeric.png</texturefocus>
    <texturenofocus colordiffuse="$VAR[SelectedColor]">buttons/KeyNumeric.png</texturenofocus>
  </include>
</includes>
