<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">300</defaultcontrol>
  <controls>
    <include>DialogFullBG</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="image" description="Sidebar">
        <left>-150</left>
        <top>0</top>
        <width>660</width>
        <height>100%</height>
        <aspectratio>stretch</aspectratio>
        <texture border="60">img/HomeMenuBarV.png</texture>
      </control>
      <control type="image" description="Icon">
        <left>90</left>
        <top>140</top>
        <width>320</width>
        <height>320</height>
        <aspectratio align="center" aligny="center">keep</aspectratio>
        <texture fallback="DefaultFolder.png">$INFO[ListItem.Thumb]</texture>
      </control>
      <control type="grouplist" id="300">
        <left>90</left>
        <top>650</top>
        <width>320</width>
        <height min="60" max="240">auto</height>
        <itemgap>10</itemgap>
        <aligny>top</aligny>
        <align>center</align>
        <control type="button" id="9" description="settings">
          
          <width>320</width>
          <align>center</align>
          <label>5</label>
        </control>
        <control type="button" id="7" description="Disable">
          
          <width>320</width>
          <align>center</align>
          <label>24021</label>
        </control>
        <control type="button" id="10" description="Changelog">
          
          <width>320</width>
          <align>center</align>
          <label>24036</label>
        </control>
      </control>
      <control type="group" description="Info">
        <left>600</left>
        <top>150</top>
        <control type="label" description="Heading">
          <top>0</top>
          <width>1125</width>
          <height>45</height>
          <align>left</align>
          <font>size24</font>
          <label>[B]$INFO[ListItem.Property(Addon.Name)][/B]$INFO[ListItem.Property(Addon.Version),  $LOCALIZE[24051] ]</label>
        </control>
        <control type="label" description="summary">
          <top>90</top>
          <width>1125</width>
          <height>45</height>
          <align>left</align>
          <label>$INFO[ListItem.Property(Addon.Summary)]</label>
        </control>
        <control type="label" description="Author">
          <top>175</top>
          <width>1125</width>
          <height>45</height>
          <align>left</align>
          <label>$INFO[ListItem.Property(Addon.Creator)]</label>
        </control>
        <control type="textbox" description="Disclaimer">
          <top>240</top>
          <width>1125</width>
          <height>66</height>
          <font>size18</font>
          <align>left</align>
          <textcolor>$VAR[Label2Color]</textcolor>
          <label>$INFO[ListItem.Property(Addon.Disclaimer)]</label>
        </control>
        <control type="textbox" description="Plot">
          <left>0</left>
          <top>360</top>
          <width>1200</width>
          <height>672</height>
          <label>$INFO[ListItem.Property(Addon.Description)]</label>
        </control>
      </control>
    </control>
  </controls>
</window>
