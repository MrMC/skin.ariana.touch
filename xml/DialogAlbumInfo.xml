<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">9001</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="MainHeading">
        <include>CenterHeading</include>
        <label>[B]$VAR[GlobalHeadings][/B]</label>
      </control>
      <control type="image" description="Thumb">
        <top>96</top>
        <right>40</right>
        <width>600</width>
        <bottom>80</bottom>
        <texture background="true">$INFO[ListItem.Thumb]</texture>
        <aspectratio align="right" aligny="center">keep</aspectratio>
      </control>
      <control type="group" description="Top info">
        <left>40</left>
        <top>96</top>
        <width>50%</width>
        <control type="label" description="Item Label">
          <top>210</top>
          <width>50%</width>
          <height>60</height>
          <align>left</align>
          <font>size24B</font>
          <autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
          <info>ListItem.Label</info>
        </control>
        <control type="label" description="Album Title">
          <top>195</top>
          <width>50%</width>
          <height>60</height>
          <align>left</align>
          <font>size24B</font>
          <autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
          <info>ListItem.Album</info>
        </control>
        <control type="label" description="Artist Label">
          <visible>!container.content(artists)</visible>
          <top>270</top>
          <width>50%</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <label>$INFO[ListItem.Artist]</label>
        </control>
        <control type="label" description="Styles Label">
          <visible>container.content(artists)</visible>
          <top>270</top>
          <width>50%</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <scroll>false</scroll>
          <label>$INFO[ListItem.Property(Artist_Style)]</label>
        </control>
        <control type="label" description="Moods Label">
          <visible>container.content(artists)</visible>
          <visible>IsEmpty(ListItem.Property(Artist_Style))</visible>
          <top>270</top>
          <width>50%</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <scroll>false</scroll>
          <label>$INFO[ListItem.Property(Artist_Mood)]</label>
        </control>
        <control type="label" description="Year and Genre">
          <top>315</top>
          <width>50%</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <label>$INFO[ListItem.Year,, â€¢ ]$INFO[ListItem.Genre]</label>
        </control>
        <control type="label" description="Genre">
          <top>315</top>
          <width>50%</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <label>$INFO[ListItem.Property(Artist_Genre)]</label>
        </control>
        <control type="textbox" id="4" description="Plot">
          <left>0</left>
          <top>390</top>
          <width>50%</width>
          <height>250</height>
          <font>plot</font>
          <autoscroll delay="6500" time="4000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
        </control>
      </control>
      <control type="grouplist" id="9001">
        <include>9000GrouplistParameters</include>
        <control type="button" id="6" description="refresh">
          <include>9000Buttons</include>
          <label>$LOCALIZE[184]</label>
        </control>
        <control type="button" id="10" description="art">
          <include>9000Buttons</include>
          <label>$LOCALIZE[13405]</label>
        </control>
        <control type="button" id="12" description="fanart">
          <include>9000Buttons</include>
          <label>$LOCALIZE[20413]</label>
        </control>
      </control>
    </control>
  </controls>
</window>
