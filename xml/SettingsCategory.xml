<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">3</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" description="Heading">
        <include>CenterHeading</include>
        <label>$LOCALIZE[10004] / $INFO[Control.GetLabel(2)]</label>
      </control>
      <control type="label" id="2" description="Category label">
        <left>650</left>
        <top>117</top>
        <width>620</width>
        <height>72</height>
        <align>center</align>
        <font>-</font>
      </control>
      <control type="grouplist" id="3" description="Left - Button Area">
        <left>40</left>
        <top>132</top>
        <width>25%</width>
        <height>90%</height>
        <itemgap>2</itemgap>
        <onleft>5</onleft>
        <onright>5</onright>
        <onup>20</onup>
        <ondown>noop</ondown>
        <orientation>vertical</orientation>
      </control>
      <control type="button" id="10" description="Category Button">
        <align>left</align>
        <width>25%</width>
      </control>
      <control type="button" id="20" description="Settings level">
        <bottom>100</bottom>
        <left>45</left>
        <width>25%</width>
        <ondown>3</ondown>
        <align>left</align>
        <onclick>SettingsLevelChange</onclick>

      </control>
      <control type="grouplist" id="5" description="Right - Control Area">
        <right>40</right>
        <top>132</top>
        <width>65%</width>
        <height>742</height>
        <itemgap>2</itemgap>
        <onleft>3</onleft>
        <onright>60</onright>
        <onup>5</onup>
        <ondown>5</ondown>
        <pagecontrol>60</pagecontrol>
        <orientation>vertical</orientation>
      </control>
      <control type="button" id="7" description="Button">
        <width>65%</width>
        <align>left</align>

      </control>
      <control type="radiobutton" id="8" description="Radio Button">
        <width>65%</width>
        <radioleft>1197</radioleft>
        <align>left</align>

      </control>
      <control type="spincontrolex" id="9" description="Spin control">
        <width>65%</width>
        <align>left</align>
      </control>
      <control type="sliderex" id="13" description="Slider control">
        <width>65%</width>
        <align>left</align>
      </control>
      <control type="textbox" id="6" description="Settings description">
        <right>40</right>
        <top>910</top>
        <width>65%</width>
        <height>126</height>
        <textcolor>$VAR[LabelNFColor]</textcolor>
        <autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
      </control>
    </control>
  </controls>
</window>
